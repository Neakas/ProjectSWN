<UserControl x:Name="StatLabel1" x:Class="SWN.UserControls.StatLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SWN.UserControls"
             xmlns:themes="http://schemas.rudigrobler.net/wpfthemes"
             themes:ThemeManager.Theme="ExpressionDark"
             mc:Ignorable="d" Height="23" Width="45.667">
    <Grid>
        <Rectangle Fill="#FF2E2E2E" Stroke="Black" />
        <Label x:Name="lblText" Content="{Binding Path=Text, ElementName=StatLabel1}" Margin="3,3,3,3"
               FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Label x:Name="lblValue" Content="{Binding Path=Value, ElementName=StatLabel1}" Margin="3,3,3,3"
               FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" />
    </Grid>
</UserControl>