<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWN.Forms"
        xmlns:themes="http://schemas.rudigrobler.net/wpfthemes"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:UserControls="clr-namespace:SWN.UserControls" x:Class="SWN.CreateNewCharacter"
        themes:ThemeManager.Theme="ExpressionDark"
        mc:Ignorable="d"
        Title="CreateNewCharacter" Height="654" Width="924">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource SWNBackgroundDark}"/>
    </Window.Background>
    <Grid x:Name="GridMain">
        <Grid x:Name="GridPersonal" Margin="0,0,209,547">
            <Label x:Name="lName" Content="Name:" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="23" Margin="49,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Name}"/>
            <Label x:Name="lPlayer" Content="Player:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tbPlayer" HorizontalAlignment="Left" Height="23" Margin="49,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True" Focusable="False" Text="{Binding PlayerName}"/>
            <Label x:Name="lHeight" Content="Height:" HorizontalAlignment="Left" Margin="180,13,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tbHeight" HorizontalAlignment="Left" Height="23" Margin="223,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Height}"/>
            <Label x:Name="lWeight" Content="Weight:" HorizontalAlignment="Left" Margin="177,41,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tbWeight" HorizontalAlignment="Left" Height="23" Margin="223,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Weight}"/>
            <Label x:Name="lSizeMod" Content="Size Mod:" HorizontalAlignment="Left" Margin="350,13,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tbSizeMod" HorizontalAlignment="Left" Height="23" Margin="407,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding SizeModifier}"/>
            <Label x:Name="lAge" Content="Age:" HorizontalAlignment="Left" Margin="378,41,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tbAge" HorizontalAlignment="Left" Height="23" Margin="407,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Age}"/>
            <Label x:Name="lPoints" Content="Points:" HorizontalAlignment="Left" Margin="535,13,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tbPoints" HorizontalAlignment="Left" Height="23" Margin="574,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True" Focusable="False" Text="{Binding PointTotal}"/>
        </Grid>
        <Grid x:Name="GridMainStats" Margin="10,82,571,413" >
            <Label x:Name="lStrenght" Content="Str:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <xctk:IntegerUpDown x:Name="iudStrenght" HorizontalAlignment="Left" Height="23" Margin="32,7,0,0" VerticalAlignment="Top" Width="44" Focusable="False" Text="{Binding Strenght}" Foreground="White" AllowTextInput="False" ValueChanged="iudStrenght_ValueChanged" Minimum="1">
                <xctk:IntegerUpDown.Background>
                    <SolidColorBrush Color="{DynamicResource SWNBackgroundDark}"/>
                </xctk:IntegerUpDown.Background>
            </xctk:IntegerUpDown>
            <Label x:Name="lDexterity" Content="Dex:" HorizontalAlignment="Left" Margin="4,38,0,0" VerticalAlignment="Top"/>
            <xctk:IntegerUpDown x:Name="iudDexterity" HorizontalAlignment="Left" Height="23" Margin="32,35,0,0" VerticalAlignment="Top" Width="44" Focusable="False" Text="{Binding Dexterity}" Foreground="White" AllowTextInput="False" Minimum="1" ValueChanged="iudDexterity_ValueChanged">
                <xctk:IntegerUpDown.Background>
                    <SolidColorBrush Color="{DynamicResource SWNBackgroundDark}"/>
                </xctk:IntegerUpDown.Background>
            </xctk:IntegerUpDown>
            <Label x:Name="lIntelligence" Content="Int:" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top"/>
            <xctk:IntegerUpDown x:Name="iudIntelligence" HorizontalAlignment="Left" Height="23" Margin="32,63,0,0" VerticalAlignment="Top" Width="44" Focusable="False" Text="{Binding Intelligence}" Foreground="White" AllowTextInput="False" Minimum="1" ValueChanged="iudIntelligence_ValueChanged">
                <xctk:IntegerUpDown.Background>
                    <SolidColorBrush Color="{DynamicResource SWNBackgroundDark}"/>
                </xctk:IntegerUpDown.Background>
            </xctk:IntegerUpDown>
            <Label x:Name="lHealth" Content="HT:" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top"/>
            <xctk:IntegerUpDown x:Name="iudHealth" HorizontalAlignment="Left" Height="23" Margin="32,91,0,0" VerticalAlignment="Top" Width="44" Focusable="False" Text="{Binding Health}" Foreground="White" AllowTextInput="False" Minimum="1" ValueChanged="iudHealth_ValueChanged">
                <xctk:IntegerUpDown.Background>
                    <SolidColorBrush Color="{DynamicResource SWNBackgroundDark}"/>
                </xctk:IntegerUpDown.Background>
            </xctk:IntegerUpDown>
            <Label x:Name="lHitpoints" Content="HP:" HorizontalAlignment="Left" Margin="88,10,0,0" VerticalAlignment="Top"/>
            <xctk:IntegerUpDown x:Name="iudHitPoints" HorizontalAlignment="Left" Height="23" Margin="110,7,0,0" VerticalAlignment="Top" Width="44" Focusable="False" Text="{Binding HitPoints}" Foreground="White" AllowTextInput="False" Minimum="1" ValueChanged="iudHitPoints_ValueChanged">
                <xctk:IntegerUpDown.Background>
                    <SolidColorBrush Color="{DynamicResource SWNBackgroundDark}"/>
                </xctk:IntegerUpDown.Background>
            </xctk:IntegerUpDown>
            <Label x:Name="lWillPower" Content="Will:" HorizontalAlignment="Left" Margin="83,38,0,0" VerticalAlignment="Top"/>
            <xctk:IntegerUpDown x:Name="iudWillPower" HorizontalAlignment="Left" Height="23" Margin="110,35,0,0" VerticalAlignment="Top" Width="44" Focusable="False" Text="{Binding WillPower}" Foreground="White" AllowTextInput="False" Minimum="1">
                <xctk:IntegerUpDown.Background>
                    <SolidColorBrush Color="{DynamicResource SWNBackgroundDark}"/>
                </xctk:IntegerUpDown.Background>
            </xctk:IntegerUpDown>
            <Label x:Name="lPerception" Content="Per:" HorizontalAlignment="Left" Margin="85,66,0,0" VerticalAlignment="Top"/>
            <xctk:IntegerUpDown x:Name="iudPerception" HorizontalAlignment="Left" Height="23" Margin="110,63,0,0" VerticalAlignment="Top" Width="44" Focusable="False" Text="{Binding Perception}" Foreground="White" AllowTextInput="False" Minimum="1">
                <xctk:IntegerUpDown.Background>
                    <SolidColorBrush Color="{DynamicResource SWNBackgroundDark}"/>
                </xctk:IntegerUpDown.Background>
            </xctk:IntegerUpDown>
            <Label x:Name="lFatiguePoints" Content="FP:" HorizontalAlignment="Left" Margin="90,94,0,0" VerticalAlignment="Top"/>
            <xctk:IntegerUpDown x:Name="iudFatiguePoints" HorizontalAlignment="Left" Height="23" Margin="110,91,0,0" VerticalAlignment="Top" Width="44" Focusable="False" Text="{Binding FatiguePoints}" Foreground="White" AllowTextInput="False" Minimum="1">
                <xctk:IntegerUpDown.Background>
                    <SolidColorBrush Color="{DynamicResource SWNBackgroundDark}"/>
                </xctk:IntegerUpDown.Background>
            </xctk:IntegerUpDown>
            <Label x:Name="lBasicLift" Content="Basic Lift:" HorizontalAlignment="Left" Margin="174,10,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tbBasicLift" HorizontalAlignment="Left" Height="23" Margin="228,7,0,0" VerticalAlignment="Top" Width="44" Focusable="False" Text="{Binding BasicLift}" Foreground="White" IsReadOnly="True"/>
            <Label x:Name="lBasicSpeed" Content="Basic Speed:" HorizontalAlignment="Left" Margin="158,38,0,0" VerticalAlignment="Top"/>
            <xctk:IntegerUpDown x:Name="iudBasicSpeed" HorizontalAlignment="Left" Height="23" Margin="228,35,0,0" VerticalAlignment="Top" Width="44" Focusable="False" Text="{Binding BasicSpeed}" Foreground="White" AllowTextInput="False" Minimum="1">
                <xctk:IntegerUpDown.Background>
                    <SolidColorBrush Color="{DynamicResource SWNBackgroundDark}"/>
                </xctk:IntegerUpDown.Background>
            </xctk:IntegerUpDown>
            <Label x:Name="lBasicMove" Content="Basic Move:" HorizontalAlignment="Left" Margin="158,66,0,0" VerticalAlignment="Top"/>
            <xctk:IntegerUpDown x:Name="iudBasicMove" HorizontalAlignment="Left" Height="23" Margin="228,63,0,0" VerticalAlignment="Top" Width="44" Focusable="False" Text="{Binding BasicMove}" Foreground="White" AllowTextInput="False" Minimum="1">
                <xctk:IntegerUpDown.Background>
                    <SolidColorBrush Color="{DynamicResource SWNBackgroundDark}"/>
                </xctk:IntegerUpDown.Background>
            </xctk:IntegerUpDown>

        </Grid>

    </Grid>
</Window>
