<Window x:Class="SWNAdmin.Forms.ManageAdvantage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWNAdmin.Forms"
        xmlns:themes="http://schemas.rudigrobler.net/wpfthemes"
        themes:ThemeManager.Theme="ExpressionDark"
        mc:Ignorable="d"
        Title="AddAdvantage" Height="727.41" Width="816.53">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource SWNLightBackground}"/>
    </Window.Background>
    <Grid>
        <TextBox x:Name="tbDiscription" HorizontalAlignment="Left" Margin="115,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="131" Width="263" Background="#FFDAD9D9"/>
        <CheckBox x:Name="cbisEnabled" Content="isEnabled" HorizontalAlignment="Left" Margin="10,244,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="23" Margin="115,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Advantage Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Discription:" HorizontalAlignment="Left" Margin="43,41,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbBonuses" HorizontalAlignment="Left" Height="100" Margin="579,13,0,0" VerticalAlignment="Top" Width="100"/>
        <ListBox x:Name="lbMali" HorizontalAlignment="Left" Height="100" Margin="579,169,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:Name="cbBoni" HorizontalAlignment="Left" Margin="454,36,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label2" Content="Add a Bonus" HorizontalAlignment="Left" Margin="454,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btBonusAdd" Content="Add" HorizontalAlignment="Left" Margin="496,63,0,0" VerticalAlignment="Top" Width="35" Click="btBonusAdd_Click"/>
        <Button x:Name="btBonusDel" Content="Del" HorizontalAlignment="Left" Margin="539,63,0,0" VerticalAlignment="Top" Width="35" Click="btBonusDel_Click"/>
        <Label x:Name="label2_Copy" Content="Add a Malus" HorizontalAlignment="Left" Margin="454,169,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbMali" HorizontalAlignment="Left" Margin="454,195,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btMaliAdd" Content="Add" HorizontalAlignment="Left" Margin="495,222,0,0" VerticalAlignment="Top" Width="35" Click="btMaliAdd_Click"/>
        <Button x:Name="btMaliDel" Content="Del" HorizontalAlignment="Left" Margin="535,222,0,0" VerticalAlignment="Top" Width="35" Click="btMaliDel_Click"/>
        <Button x:Name="btAddAdvantage" Content="Add Advantage" HorizontalAlignment="Left" Margin="115,180,0,0" VerticalAlignment="Top" Width="104" Click="btAddAdvantage_Click"/>
        <TextBox x:Name="tbPointCost" HorizontalAlignment="Left" Height="23" Margin="310,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="68"/>
        <Label x:Name="label3" Content="Points" HorizontalAlignment="Left" Margin="263,180,0,0" VerticalAlignment="Top"/>
        <Separator HorizontalAlignment="Left" Height="31" Margin="0,264,0,0" VerticalAlignment="Top" Width="746"/>
        <Grid>
            <Border  BorderBrush="Black" BorderThickness="2" Margin="10,286,0,0" HorizontalAlignment="Left" Width="405" Height="400" VerticalAlignment="Top" >
                <ScrollViewer VerticalScrollBarVisibility="Auto"  BorderBrush="Black" BorderThickness="2">
                    <StackPanel x:Name="sP1" HorizontalAlignment="Left" Width="403" VerticalAlignment="Top" Background="#FFC9C9C9" MinHeight="398" />
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
